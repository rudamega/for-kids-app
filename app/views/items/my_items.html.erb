
<h1 class="text-center">VENDENDO</h1>
<%= link_to "Create New items", new_item_path %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Item</th>
      <th>Price</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
 <%@items.where(sold: false).each do |item| %>
      <tr>
        <td><%= item.id%></td>
        <td><%= item.name%></td>
        <td><%= item.price%></td>
        <td><%= item.created_at%></td>
        <td><%= link_to 'Show', item_path(item.id), class: "btn btn-outline-secondary"%></td>
        <td><%= link_to 'remove', item_path(item.id), method: :delete, class: "btn btn-outline-secondary" %> </td>
      </tr>
  <%end%>
  </tbody>
</table>

<h1 class="text-center">VENDIDOS</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Item</th>
      <th>Price</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
 <%@items.where(sold: true).each do |item| %>
      <tr>
       <td><%=  link_to item.id, item_path(item.id)%></td>
        <td><%= item.name%></td>
        <td><%= item.price%></td>
        <td><%= item.created_at%></td>
  <%end%>
      </tr>
  </tbody>
</table>
