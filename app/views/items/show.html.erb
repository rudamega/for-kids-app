<div class="show-container">
  <div class="show-container-inside">
    <h1><%= @item.name %></h1>
    <% if @item.photo.attached? %>
    <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', :back, class: "btn btn-outline-secondary" %>
<%if current_user == @item.user %>
  <%= link_to 'remove', item_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-secondary" %>
<% else%>
  <%= link_to 'Buy', new_item_order_path(@item), class: "btn btn-outline-secondary" %>
<% end %>

